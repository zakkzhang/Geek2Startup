<import src="../../comm_wxml/weapp.wxml"/>

<view class="index">
    <view class="head">
        <view class="title">极客吐司</view>
        <view class="desc">你好，{{userInfo.nickName}}</view>
    </view>

    <import src="../../wxParse/wxParse.wxml"/>
    <template is="wxParse" data="{{wxParseData:insertData.nodes}}" />
    <block wx:for="{{article}}" wx:key="index">

    <view class="weui-panel weui-panel_access">
        <view class="weui-panel__bd">

            <!-- LIST START -->
            <view class=" weui-media-box_text">
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__desc">
                        <image class="index-image" style="width: 100%; height: 200px; background-color: #eeeeee;" mode="{{item.mode}}" src="{{item.image}}"></image>
                    </view>
                </view>
                    <view class="weui-media-box">
                    <view class="weui-media-box__title weui-media-box__title_in-text">{{item.title}}</view>
                    <view class="weui-media-box__desc">{{item.desc}}</view>
                    <view class="weui-media-box__info">
                        <view class="date weui-media-box__info__meta">2016年12月31日</view>
                    </view>
                </view>

            </view>
            <navigator url="/pages/user_page/user_page?user={{index}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd"><image class="cir" src="{{item.user_avatar}}" style="width: 20px;height: 20px;margin-right: 6px;margin-top: 6px" /></view>
                    <view class="weui-cell__bd weui-cell_primary">
                        <view class="name">{{item.user_name}}</view>
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <!-- LIST END -->

        </view>
	</view>
    </block>

    <template is="appfooter" data="{{we_data:footer}}" />
</view>
