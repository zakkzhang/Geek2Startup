include ./../include/head
include ./../include/menu
.ui.container
	.ui.menu.secondary
		a.item#openMenu
			i.sidebar.icon
			| Menu

#Login.ui.container
	form.ui.form(class=typeof isError==true ? "good" : "error",method="post",action="/login")
		h1.ui.header.text-center
			| Geek2Startup
			.sub.header Dashboard
		.area
			h4.ui.dividing.header Login Form
			if isError
				.ui.error.message
					.header Action Forbidden
					p 錯誤的賬戶或者密碼
			.field
				label User
				input(type='text', name='name', placeholder='Name')
			.field
				label Password
				input(type='password', name='password', placeholder='Password')
			button.ui.primary.button(type='submit') Submit
